SELECT * FROM TBL_PAYMENT;

CREATE TABLE TBL_PAYMENT (
PAY_PID INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
PAY_RES_RID INT NOT NULL,
PAY_MEM_ID VARCHAR(50) NOT NULL,
PAY_DATE timestamp default NOW() NOT NULL,
PAY_TYPE VARCHAR(20) NOT NULL,
FOREIGN KEY (PAY_MEM_ID) references TBL_MEMBER(MEM_ID),
FOREIGN KEY (PAY_RES_RID) references TBL_RESERVE(RES_RID)
);


DROP TABLE TBL_PAYMENT;

select * from TBL_MEMBER;

select * from TBL_PAYMENT;

select * from TBL_RESERVE;

select P.PAY_MEM_ID, P.PAY_DATE, P.PAY_TYPE, 
		P.PAY_RES_RID, R.RES_TOTALPAY
from TBL_PAYMENT AS P
JOIN TBL_RESERVE AS R
ON P.PAY_RES_RID = R.RES_RID;

CREATE TABLE TBL_PAYMENT (
PAY_PID INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
PAY_RES_RID INT NOT NULL,
PAY_MEM_ID VARCHAR(50) NOT NULL,
PAY_DATE timestamp default NOW() NOT NULL,
PAY_TYPE VARCHAR(20) NOT NULL,
FOREIGN KEY (PAY_MEM_ID) references TBL_MEMBER(MEM_ID),
FOREIGN KEY (PAY_RES_RID) references TBL_RESERVE(RES_RID)
);

select P.PAY_MEM_ID, P.PAY_DATE, P.PAY_TYPE,
P.PAY_RES_RID, R.RES_TOTTBL_PAYMENTALPAY
from TBL_PAYMENT AS P
JOIN TBL_RESERVE AS R
ON P.PAY_RES_RID = R.RES_RID;
